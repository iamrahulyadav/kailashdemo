<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/row_order_details_cvContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_7sdp"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="@dimen/_3sdp"
    app:cardElevation="@dimen/_3sdp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ripple_custom"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/row_order_details_ivProductImg"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_margin="@dimen/_5sdp"
                android:scaleType="fitXY" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="vertical">


                <com.automobile.service.customecomponent.CustomTextView
                    android:id="@+id/row_order_details_tvTitle"
                    style="@style/TextStyle.row_mattresesscare.title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:text="Car Seat Neck Cushion Pillow"
                    android:textSize="@dimen/_10sdp"
                    app:font_name="GothamHTF-Medium.otf" />


                <com.automobile.service.customecomponent.CustomTextView
                    android:id="@+id/row_order_details_tvPrise"
                    style="@style/TextStyle.row_mattresesscare.date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$150"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/_10sdp"
                    app:font_name="GothamHTF-Medium.otf" />


                <com.automobile.service.customecomponent.CustomTextView
                    android:id="@+id/row_order_details_tvQty"
                    style="@style/TextStyle.row_mattresesscare.description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="quantity: 1"
                    android:textAllCaps="true"
                    android:textSize="@dimen/_10sdp"
                    app:font_name="GothamHTF-Medium.otf" />


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>

