<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/row_servicelist_cvContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_7sdp"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="@dimen/_3sdp"
    app:cardElevation="@dimen/_3sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/ripple_custom"
        android:gravity="center"
        android:layout_margin="@dimen/_5sdp"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/row_servicelist_ivCatImg"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/splace_logo" />


        <com.automobile.service.customecomponent.CustomTextView
            android:id="@+id/row_servicelist_tvCatName"
            style="@style/TextStyle.row_mattresesscare.title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:paddingBottom="@dimen/_10sdp"
            android:text="Computer"
            android:textSize="@dimen/_14sdp"
            app:font_name="GothamHTF-Medium.otf" />


    </LinearLayout>


</android.support.v7.widget.CardView>

