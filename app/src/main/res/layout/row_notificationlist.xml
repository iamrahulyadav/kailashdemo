<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/row_notification_cvContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_7sdp"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="@dimen/_3sdp"
    app:cardElevation="@dimen/_3sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ripple_custom"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_3sdp"
            android:gravity="center_vertical"
            android:orientation="vertical">
            


            <com.automobile.service.customecomponent.CustomTextView
                android:id="@+id/row_notification_tvTitle"
                style="@style/TextStyle.row_mattresesscare.title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="Pick-UP"
                android:layout_marginTop="@dimen/_3sdp"
                app:font_name="GothamHTF-Medium.otf"/>

            <com.automobile.service.customecomponent.CustomTextView
                android:id="@+id/row_notification_tvDescription"
                style="@style/TextStyle.row_mattresesscare.description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="scsiodoi fduifuidf dfijdff dfjksjfs fdsuhjfkjsf sf fujujffdfjdfdfdjfdjfjdfjdsuhjsujfsfikjfj"
                app:font_name="GothamHTF-Book.otf"/>
            

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginBottom="@dimen/_6sdp"
                android:layout_marginStart="@dimen/_6sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:background="@color/collection_color"/>
            
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_3sdp">

                <com.automobile.service.customecomponent.CustomTextView
                    android:id="@+id/row_notification_tvDAteTime"
                    style="@style/TextStyle.row_mattresesscare.date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:text="21/12/2017"
                    android:layout_marginStart="@dimen/_3sdp"
                    app:font_name="GothamHTF-Medium.otf"/>

                
            </RelativeLayout>

        </LinearLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>

