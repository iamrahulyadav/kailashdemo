<?xml version="1.0" encoding="utf-8"?>
<com.automobile.service.comman.SlidingLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_add_wallate_llContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bookservice_bg_color">
    
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:orientation="horizontal"
        android:background="@color/row_view">



        <com.automobile.service.customecomponent.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment Balance"
            android:inputType="textPersonName"
            android:textSize="@dimen/_16sdp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:padding="@dimen/_10sdp"
            android:textColor="@color/color_black"
            app:font_name="GothamHTF-Book.otf" />


        <com.automobile.service.customecomponent.CustomTextView
            android:id="@+id/fragment_add_wallate_tvMyWallate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100"
            android:inputType="textPersonName"
            android:textSize="@dimen/_16sdp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:padding="@dimen/_10sdp"
            android:textColor="@color/color_black"
            app:font_name="GothamHTF-Book.otf" />


    </LinearLayout>





    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_20sdp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:orientation="vertical">


            <android.support.v7.widget.CardView
                style="@style/book_service_cardview"
                android:layout_width="match_parent">


                <com.automobile.service.customecomponent.CustomEdittext
                    android:id="@+id/fragment_add_wallate_etAmount"
                    style="@style/book_service_cardview_inner_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Amount (â‚¹)"
                    android:digits="0123456789."
                    android:inputType="numberDecimal"
                    app:font_name="GothamHTF-Book.otf" />


            </android.support.v7.widget.CardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_25sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <com.automobile.service.customecomponent.CustomButton
                    android:id="@+id/fragment_add_wallate_btnSubmit"
                    style="@style/EditTextStyle.login_btn"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    android:text="Add Money"
                    android:textAllCaps="true"
                    app:font_name="GothamHTF-Bold.otf" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</com.automobile.service.comman.SlidingLinearLayout>