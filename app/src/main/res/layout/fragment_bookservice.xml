<?xml version="1.0" encoding="utf-8"?>
<com.automobile.service.comman.SlidingLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_bookservice_llContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bookservice_bg_color">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                style="@style/book_service_cardview"
                android:layout_width="match_parent">

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <com.automobile.service.customecomponent.CustomTextView
                        android:id="@+id/fragment_bookservice_tvTypeSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:hint="Select service type"
                        android:padding="@dimen/_5sdp"
                        android:textColor="@color/color_black"
                        android:textColorHint="@color/forgot_link_color"
                        android:textSize="@dimen/_14sdp" />


                    <com.automobile.service.customecomponent.CustomSpinner
                        android:id="@+id/fragment_bookservice_spServiceType"
                        style="@style/SpinnerStyle"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_below="@+id/fragment_bookservice_tvTypeSpinner"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:drawSelectorOnTop="true" />


                    <ImageView
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:src="@drawable/icon_down_arrow" />


                </RelativeLayout>


            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                style="@style/book_service_cardview"
                android:layout_width="match_parent">


                <com.automobile.service.customecomponent.CustomEdittext
                    android:id="@+id/fragment_bookservice_etCarName"
                    style="@style/book_service_cardview_inner_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Select Car Name"
                    android:inputType="textPersonName"
                    app:font_name="GothamHTF-Book.otf" />


            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                style="@style/book_service_cardview"
                android:layout_width="match_parent">


                <com.automobile.service.customecomponent.CustomTextView
                    android:id="@+id/fragment_bookservice_tvDate"
                    style="@style/book_service_cardview_inner_textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Select Date"
                    app:font_name="GothamHTF-Book.otf" />


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                style="@style/book_service_cardview"
                android:layout_width="match_parent">


                <com.automobile.service.customecomponent.CustomTextView
                    android:id="@+id/fragment_bookservice_tvTime"
                    style="@style/book_service_cardview_inner_textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Select Time"
                    app:font_name="GothamHTF-Book.otf" />


            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                style="@style/book_service_cardview"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp">


                <com.automobile.service.customecomponent.CustomEdittext
                    android:id="@+id/fragment_bookservice_etDescription"
                    style="@style/book_service_cardview_inner_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="top"
                    android:gravity="top"
                    android:hint="Special Instruction"
                    android:inputType="textPersonName"
                    app:font_name="GothamHTF-Book.otf" />


            </android.support.v7.widget.CardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_25sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <com.automobile.service.customecomponent.CustomButton
                    android:id="@+id/fragment_bookservice_btnNext"
                    style="@style/EditTextStyle.login_btn"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:text="@string/next"
                    android:textAllCaps="true"
                    app:font_name="GothamHTF-Bold.otf" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</com.automobile.service.comman.SlidingLinearLayout>