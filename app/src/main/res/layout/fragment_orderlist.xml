<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_orderlist_llContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/fragment_orderlist_rvProductList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_5sdp"
        android:visibility="gone"
        android:background="@color/bg_color">

    </android.support.v7.widget.RecyclerView>


    <RelativeLayout
        android:id="@+id/fragment_rlEmpty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:visibility="gone">


        <TextView
            android:id="@+id/tvEmptyMessage"
            style="@style/TextStyle.empty_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/no_order_found"
            android:textAppearance="?android:attr/textAppearanceMedium" />


    </RelativeLayout>


    <LinearLayout
        android:id="@+id/fragment_orderlist_llProgress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible">


        <ProgressBar
            android:id="@+id/progressBar1"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/_50sdp" />

    </LinearLayout>


</LinearLayout>